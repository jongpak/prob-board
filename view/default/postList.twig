{% extends 'default/layout.twig' %}

{% block body %}
<h2>Posts</h2>
<table>
    <tr>
        <th>No.</th>
        <th>Subject</th>
        <th>Author</th>
        <th>Time</th>
    </tr>
    {% for post in posts %}
    <tr>
        <td>{{ post.getId() }}</td>
        <td>{{ post.getSubject() }}</td>
        <td>{{ post.getAuthor() }}</td>
        <td>{{ post.getCreatedAt() | date('Y-M-d') }}</td>
    </tr>
    {% endfor %}
</table>
{% endblock %}
