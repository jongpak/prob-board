{% extends 'default/layout.twig' %}

{% block body %}
<h2>Posts</h2>
<table class="list">
    <caption>{{ board.getTitle() }}</caption>
    <tr>
        <th class="no">No.</th>
        <th class="subject">Subject</th>
        <th class="author">Author</th>
        <th class="time">Time</th>
    </tr>
    {% for post in posts %}
    <tr>
        <td class="no">{{ post.getId() }}</td>
        <td class="subject"><a href="{{ url('post/' ~ post.getId()) }}">{{ post.getSubject() }}</a></td>
        <td class="author">{{ post.getAuthor() }}</td>
        <td class="time">{{ post.getCreatedAt() | date('Y-M-d') }}</td>
    </tr>
    {% endfor %}
</table>

<div class="action">
    <a href="{{ url(board.getName() ~ '/post') }}">Write</a>
</div>
{% endblock %}
