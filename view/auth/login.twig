{% extends file('layout') %}

{% block title %}Login{% endblock %}

{% block body %}
<form action="" method="post" id="loginForm">
<fieldset>
    <legend>Login</legend>

    <p><label for="login-input-id">ID</label></p>
    <p><input type="text" name="account_id" id="login-input-id" value="" placeholder="ID" /></p>

    <p><label for="login-input-password">Password: </label></p>
    <p><input type="password" name="password" id="login-input-password" value="" placeholder="PW" /></p>

    <p><input type="submit" value="login" /></p>
</fieldset>
</form>
{% endblock %}
