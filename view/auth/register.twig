{% extends file('layout') %}

{% block title %}Register{% endblock %}

{% block body %}
<form action="" method="post" id="loginForm">
<fieldset>
    <legend>Register</legend>

    <p><label for="account_id">ID</label></p>
    <p><input type="text" name="account_id" id="account_id" value="" placeholder="ID" required /></p>

    <hr />

    <p><label for="password">Password: </label></p>
    <p><input type="password" name="password" id="password" value="" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters." placeholder="PW" pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" required /></p>

    <p><label for="password-confirm">Password(re-typing): </label></p>
    <p><input type="password" name="password-confirm" id="password-confirm" value="" title="Please enter your password again." placeholder="PW (Re-typing)" required /></p>

    <hr />

    <p><label for="nickname">Nickname: </label></p>
    <p><input type="text" name="nickname" id="nickname" value="" placeholder="Nickname" required /></p>

    <p><label for="email">Email: </label></p>
    <p><input type="email" name="email" id="email" value="" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required /></p>

    <p><input type="submit" value="Register" /></p>
</fieldset>
</form>
{% endblock %}
