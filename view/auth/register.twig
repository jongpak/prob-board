{% extends file('layout') %}

{% block title %}Register{% endblock %}

{% block body %}
<form action="" method="post" id="loginForm">
<fieldset>
    <legend>Register</legend>

    <p><input type="text" name="account_id" id="register-input-id" value="" placeholder="ID" /></p>

    <hr />

    <p><label for="register-input-password">Password: </label></p>
    <p><input type="password" name="password" id="register-input-password" value="" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters." placeholder="PW" pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" required /></p>

    <p><label for="register-input-re-password">Password(re-typing): </label></p>
    <p><input type="password" name="password-confirm" id="register-input-re-password" value="" title="Please enter your password again." placeholder="PW (Re-typing)" required  /></p>

    <hr />

    <p><label for="register-input-nickname">Nickname: </label></p>
    <p><input type="text" name="nickname" id="register-input-nickname" value="" placeholder="Nickname" required /></p>

    <p><label for="register-input-email">Email: </label></p>
    <p><input type="email" name="email" id="register-input-email" value="" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required  /></p>

    <p><input type="submit" value="Register" /></p>
</fieldset>
</form>
{% endblock %}
